package com.data;

/*
 *  write a java program to find the smallest element which is the right side for each element ?

     string arr[]={"11","2","5","4","10"};
 */

public class ArrayProgram 
{
	void meth1() {
		
		int arr[]= {11,2,5,3,10};
		int[] result = new int[arr.length];
		int min=Integer.MIN_VALUE;
		System.out.println(min);
		
		for(int i=arr.length-1;i<=0;i--) {
			
			int current=arr[i];
			result[i]=min;
			 if (current < min) {
	                min = current;
	            }
		}
		for (int i = 0; i < arr.length; i++) {
            if (result[i] == Integer.MAX_VALUE) {
                System.out.println("Smallest element to the right of " + arr[i] + " is not available.");
            } else {
                System.out.println("Smallest element to the right of " + arr[i] + " is " + result[i]);
            }
        }
		
	}

}
